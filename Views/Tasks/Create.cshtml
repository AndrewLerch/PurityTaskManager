@using Microsoft.AspNetCore.Razor.TagHelpers
@using PurityTaskManager.DTOs
@model CreateTaskDto

<h1>Create Task</h1>
<form action="Create" method="post">
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" }})
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        @* <label for="title" asp-for="Title">Title:</label>
        <input name="title" class="form-control" asp-for="Title" /> <span asp-validation-for="Title" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DueDate)
        @Html.EditorFor(model => Model.DueDate, new { htmlAttributes = new { @class = "form-control" }}) <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary form-control">Submit</button>
    </div>
    <div class="form-group">
        <button class="btn btn-secondary form-control">Cancel</button>
    </div>
</form>