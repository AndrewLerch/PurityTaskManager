@using PurityTaskManager.ViewModels
@{
    ViewData["Title"] = "Home Page";
}
@model IndexViewModel

<div class="text-center">
    <h1 class="display-4">Tasks</h1>
    <a asp-action="Create" asp-controller="Tasks" style="float: left;">New Task</a>
    @using (Html.BeginForm("Index", "Tasks", FormMethod.Get, new { id = "filterForm" }))
    {
        <select name="showCompleted" style="float: right;" onchange="document.getElementById('filterForm').submit();">
            @if (Model.ShowCompleted)
            {
                <option value="false">Not Completed</option>
                <option value="true" selected>Completed</option>
            } else 
            { 
                <option value="false" selected>Not Completed</option>
                <option value="true">Completed</option>
            }
        </select>
    }
    
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.Tasks)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.DueDate.ToShortDateString()</td>
                    @if (task.IsCompleted)
                    {
                        <td>Completed</td>
                    } else
                    { 
                        <td>
                            @using (Html.BeginForm("Complete", "Tasks", new { id = task.Id}, FormMethod.Post))
                            {
                                <button type="submit" class="checkmark-button">
                                    <img src="images/check-mark.png" alt="Mark As Completed" class="checkmark" />
                                </button>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
